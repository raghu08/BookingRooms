<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        card_view:cardCornerRadius="@dimen/margin_2"

        >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_8"
    android:layout_marginRight="@dimen/margin_8"
    android:layout_marginTop="@dimen/margin_8"
    android:paddingTop="@dimen/padding_10"
    android:background="@color/white"
    android:paddingBottom="@dimen/padding_10">



    <TextView
        android:id="@+id/roomname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_10"
        android:textColor="@color/black"
        android:textSize="@dimen/tv_18"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_toRightOf="@+id/room_photo"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/purple"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/margin_4"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_4"
        android:textSize="@dimen/tv_18"
        android:layout_toRightOf="@+id/room_photo"
        android:layout_below="@id/roomname"

        />
    <TextView
        android:id="@+id/bookedSlot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/margin_4"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_4"
        android:textSize="@dimen/tv_18"
        android:layout_alignParentRight="true"
        android:layout_below="@id/roomname"

        />



    <TextView
        android:id="@+id/floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textStyle="normal"
        android:layout_marginTop="@dimen/margin_4"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/tv_14"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_4"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_toRightOf="@+id/room_photo"
        android:layout_below="@id/capacity"

        />

    <ImageView
        android:id="@id/room_photo"
        android:layout_width="@dimen/size_100"
        android:layout_height="@dimen/size_100"
        android:scaleType="fitXY"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        />






</RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>

